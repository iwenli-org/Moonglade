@{
    var currentAction = ViewContext.RouteData?.Values["action"]?.ToString();
}

<h3>
    Settings
</h3>
<hr />

<ul class="nav nav-tabs">
    <li role="presentation" class="nav-item nav-item-non-margin">
        <a class="nav-link @(currentAction == "GeneralSettings" ? "active" : null)" asp-controller="Settings" asp-action="GeneralSettings">常规</a>
    </li>
    <li role="presentation" class="nav-item nav-item-non-margin">
        <a class="nav-link @(currentAction == "ContentSettings" ? "active" : null)" asp-controller="Settings" asp-action="ContentSettings">内容</a>
    </li>
    <li role="presentation" class="nav-item nav-item-non-margin">
        <a class="nav-link @(currentAction == "EmailSettings" ? "active" : null)" asp-controller="Settings" asp-action="EmailSettings">通知</a>
    </li>
    <li role="presentation" class="nav-item nav-item-non-margin">
        <a class="nav-link @(currentAction == "FeedSettings" ? "active" : null)" asp-controller="Settings" asp-action="FeedSettings">RSS/Atom 订阅</a>
    </li>
    <li role="presentation" class="nav-item nav-item-non-margin">
        <a class="nav-link @(currentAction == "WatermarkSettings" ? "active" : null)" asp-controller="Settings" asp-action="WatermarkSettings">水印</a>
    </li>
    <li role="presentation" class="nav-item nav-item-non-margin">
        <a class="nav-link @(currentAction == "ManageFriendLinks" ? "active" : null)" asp-controller="Settings" asp-action="ManageFriendLinks">友情链接</a>
    </li>
    <li role="presentation" class="nav-item nav-item-non-margin">
        <a class="nav-link @(currentAction == "AdvancedSettings" ? "active" : null)" asp-controller="Settings" asp-action="AdvancedSettings">高级</a>
    </li>
    <li role="presentation" class="nav-item nav-item-non-margin">
        <a class="nav-link @(currentAction == "AuditLogs" ? "active" : null)" asp-controller="Settings" asp-action="AuditLogs">审计日志</a>
    </li>
    <li role="presentation" class="nav-item nav-item-non-margin">
        <a class="nav-link @(currentAction == "About" ? "active" : null)" asp-controller="Settings" asp-action="About">关于</a>
    </li>
</ul>
